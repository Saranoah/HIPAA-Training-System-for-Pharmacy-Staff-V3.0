# HIPAA Training System V3.0 - Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# CRITICAL SECURITY SETTINGS (REQUIRED)
# =============================================================================

# Encryption key for sensitive data (REQUIRED)
# Generate with: python -c 'import secrets; print(secrets.token_urlsafe(32))'
HIPAA_ENCRYPTION_KEY=CHANGE_ME_TO_SECURE_KEY

# Salt for key derivation (REQUIRED for production)
# Generate with: python -c 'import secrets; print(secrets.token_hex(16))'
HIPAA_SALT=CHANGE_ME_TO_SECURE_SALT

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database path (SQLite)
DB_URL=data/hipaa_training.db

# For PostgreSQL (uncomment and configure if using PostgreSQL)
# DB_URL=postgresql://user:password@localhost:5432/hipaa_training

# =============================================================================
# TRAINING CONFIGURATION
# =============================================================================

# Minimum passing score for quizzes (percentage)
PASS_THRESHOLD=80

# Mini-quiz passing threshold (percentage)
MINI_QUIZ_THRESHOLD=70

# Certificate validity period (days)
TRAINING_EXPIRY_DAYS=365

# Audit log retention period (years)
AUDIT_RETENTION_YEARS=6

# =============================================================================
# NETWORK CONFIGURATION (for future web interface)
# =============================================================================

# Client IP for audit logging (leave as 127.0.0.1 for CLI)
CLIENT_IP=127.0.0.1

# Web server port (if deploying web interface)
# PORT=8000

# =============================================================================
# DEVELOPMENT SETTINGS (DO NOT USE IN PRODUCTION)
# =============================================================================

# Set to 'development' for debug mode
# ENVIRONMENT=development

# Enable verbose logging
# DEBUG=true
